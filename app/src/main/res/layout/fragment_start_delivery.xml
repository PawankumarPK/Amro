<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".fragments.StartFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">

            <ImageView
                android:id="@+id/mManualOperate"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_margin="20dp"
                android:contentDescription="@null"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_manual_operate" />


            <ImageView
                android:id="@+id/mSettings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                android:layout_toEndOf="@+id/mManualOperate"
                android:contentDescription="@null"
                android:src="@drawable/ic_settings" />

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="3dp">


            <Button
                android:id="@+id/mStartDelivery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/start_button_bg_color"
                android:fontFamily="@font/comfortaa_regular"
                android:text="Start Delivery"
                android:textAllCaps="false"
                android:textColor="@drawable/button_text_color"
                android:textSize="43sp" />


        </android.support.v7.widget.CardView>


        <TextView
            android:id="@+id/mJetbrain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp"
            android:fontFamily="@font/comfortaa_regular"
            android:text="Jetbrain"
            android:textAllCaps="false"
            android:textColor="#2196F3"
            android:textSize="40sp" />

    </RelativeLayout>

</FrameLayout>