<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <!-- <com.example.amro.KeyboardView
         android:id="@+id/locksecurity"
         android:layout_width="match_parent"
         android:layout_height="300dp"
         android:layout_centerInParent="true"
         android:layout_margin="20dp"
         android:visibility="visible" />
 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp">


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1695FA"
                android:text="Enter Passcode"
                android:textColor="#fff" />

        </android.support.v7.widget.CardView>


        <TextView
            android:id="@+id/display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:gravity="center_horizontal"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/mOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/button_gradient"
                android:text="1"
                android:onClick="numberPressed"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/mTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/button_gradient"
                android:text="2"
                android:textColor="#fff"
                android:onClick="numberPressed"
                android:textSize="20sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/mThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:onClick="numberPressed"
                android:background="@drawable/button_gradient"
                android:text="3"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/button_gradient"
                android:text="4"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/mFive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/button_gradient"
                android:text="5"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/mSix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/button_gradient"
                android:text="6"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mSeven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/button_gradient"
                android:text="7"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/mEight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/button_gradient"
                android:text="8"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/mNine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/button_gradient"
                android:text="9"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/button_gradient"
                android:text="Clear"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/mZero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/button_gradient"
                android:text="0"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/mDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/button_gradient"
                android:text="DOne"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>
</RelativeLayout>