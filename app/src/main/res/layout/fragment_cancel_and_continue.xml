<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.BreakFragment">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="10">

        <LinearLayout
            android:id="@+id/mLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#498FB0">

            <TextView
                android:id="@+id/mContinue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/comfortaa_bold"
                android:gravity="center"
                android:text="Continue"
                android:textColor="#fff"
                android:textSize="100sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/mLinearLayout"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mMove"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/comfortaa_bold"
                    android:gravity="center"
                    android:text="Delivery to "
                    android:textColor="#969494"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/mData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_bold"
                    android:gravity="center"
                    android:text="10A"
                    android:textColor="#969494"
                    android:textSize="30sp" />

            </LinearLayout>

            <Button
                android:id="@+id/mCancelDelivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/grey_gradients"
                android:fontFamily="@font/comfortaa_bold"
                android:text="Cancel Delivery"
                android:textAllCaps="false"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textColor="@drawable/button_text_color"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>